<?xml version="1.0" encoding="UTF-8"?>
<!-- Master log  -->
<configuration scan="true" scanPeriod="2 seconds"
	packagingData="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%d %level - [%X{jobName}] [jobId::%X{jobId}] [runId::%X{runId}] [%X{stepName}] %class:%L %M - %msg %replace(%ex){'[\r\n]+', ''}%nopex%n</Pattern>
		</encoder>
	</appender>
	<appender name="STDOUT_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="STDOUT" />
		<includeCallerData>true</includeCallerData>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT_ASYNC" />
	</root>

	<logger name="com" level="info" additivity="false">
		<appender-ref ref="STDOUT_ASYNC" />
	</logger>

	<!-- Logs Spring framework -->
	<logger name="org.springframework" level="error"
		includeLocation="true" additivity="false">
		<appender-ref ref="STDOUT_ASYNC" />
	</logger>
	
	<!-- Logs Spring Batch framework -->
	<logger name="org.springframework.batch" level="error"
		includeLocation="true" additivity="false">
		<appender-ref ref="STDOUT_ASYNC" />
	</logger>
	
	<!-- Logs Kafka -->
	<logger name="org.apache.kafka" level="error" includeLocation="true"
		additivity="false">
		<appender-ref ref="STDOUT_ASYNC" />
	</logger>
	
	<logger name="org.springframework.jdbc.core.JdbcTemplate" level="info" >
		<appender-ref ref="STDOUT_ASYNC" />
	</logger>

</configuration>